	    <dependency>
	      <groupId>javax.annotation</groupId>
	      <artifactId>javax.annotation-api</artifactId>
	      <scope>compile</scope>
	    </dependency>
	    <dependency>
	      <groupId>io.micronaut.aws</groupId>
	      <artifactId>micronaut-function-aws</artifactId>
