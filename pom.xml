    </repository>
    <repository>
	  <id>github</id>
	  <url>https://maven.pkg.github.com/llarreta/intrale</url>
	</repository>
  </repositories>
  <distributionManagement>
	<repository>
	  <id>github</id>
	  <name>GitHub llarreta Apache Maven Packages</name>
	  <url>https://maven.pkg.github.com/llarreta/intrale</url>
	</repository>
  </distributionManagement>
  
    <dependencies>
	    <dependency>
	      <groupId>io.micronaut</groupId>
	      <artifactId>micronaut-inject</artifactId>
